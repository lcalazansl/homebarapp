<ul class="grocery-list">
  <% grocery_list.each do |item| %>
    <li class="grocery-list-item">
      <%= item.name.titleize %>
      <%= button_to "", add_ingredient_to_cabinet_from_grocery_list_path(item.id), method: :patch, class: "fa-solid fa-square-plus fa-xl" %>
    </li>
  <% end %>
</ul>
<br>
<div class="grocery-result">
  <p><span class="text-orange"><%= grocery_list.length %></span>&nbsp
    <% if grocery_list.length == 1 %>
      ingredient to buy
    <% else %>
      ingredients to buy
    <% end %>
  </p>
</div>
<div class="share">
  <a class="btn-flat btn-large" href="/">Share this!</a>
</div>
